{
  "name": "p2p-encrypted-chat-desktop",
  "version": "1.0.0",
  "description": "P2P Chat Desktop App with Kyber + X25519 + AES-GCM encryption",
  "main": "main.js",
  "homepage": "./",
  "scripts": {
    "start": "node server.js",
    "dev": "nodemon server.js",
    "electron": "electron .",
    "electron-dev": "NODE_ENV=development electron .",
    "build": "electron-builder",
    "build-win": "electron-builder --win",
    "dist": "npm run build"
  },
  "dependencies": {
    "bcrypt": "^6.0.0",
    "express": "^4.18.2",
    "jsonwebtoken": "^9.0.2",
    "node-forge": "^1.3.1",
    "socket.io": "^4.7.5",
    "sqlite3": "^5.1.7"
  },
  "devDependencies": {
    "electron": "^38.2.2",
    "electron-builder": "^26.0.12",
    "nodemon": "^3.0.1"
  },
  "keywords": [
    "p2p",
    "chat",
    "encryption",
    "kyber",
    "x25519",
    "aes-gcm",
    "desktop",
    "electron"
  ],
  "author": "P2P Chat Team",
  "license": "MIT",
  "build": {
    "appId": "com.p2pchat.desktop",
    "productName": "P2P Encrypted Chat",
    "directories": {
      "output": "dist"
    },
    "files": [
      "main.js",
      "server.js",
      "public/**/*",
      "lib/**/*",
      "node_modules/**/*"
    ],
    "win": {
      "target": [
        {
          "target": "nsis",
          "arch": ["x64"]
        },
        {
          "target": "portable",
          "arch": ["x64"]
        }
      ],
      "icon": "assets/icon.ico",
      "requestedExecutionLevel": "asInvoker"
    },
    "linux": {
      "target": "AppImage",
      "icon": "assets/icon.png"
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true
    }
  }
}
